<%- include('../include/header.ejs') %>

    <div class="d-flex justify-content-center ">
        <div class="bg-white rounded border shadow-lg" style="width: 800px; margin: 120px; padding: 40px;">
            <h3>Chi tiết sản phẩm</h3>

            <div class="mt-3">
                <div class="mt-1">
                    <img src="<%= objProduct.image %>" style="width: 200px">
                </div>
                <div class="mt-1">
                    <span style="font-weight: bold;">Name: </span>
                    <span>
                        <%= objProduct.product_name %>
                    </span>
                </div>
                <div class="mt-1">
                    <span style="font-weight: bold;">Description: </span>
                    <span>
                        <%= objProduct.description %>
                    </span>
                </div>
                <div class="mt-1">
                    <span style="font-weight: bold;">Price: </span>
                    <span>
                        <%= objProduct.price %>$
                    </span>
                </div>
                <div class="mt-1">
                    <span style="font-weight: bold;">Category: </span>
                    <span>
                        <%= objProduct.id_category.name %>
                    </span>
                </div>
            </div>
        </div>


    </div>

    <%- include('../include/footer.ejs') %>