<%- include('../include/header.ejs') %>

    <div class="d-flex justify-content-center">
        <div class="bg-white rounded border shadow-lg" style="width: 550px; margin: 100px; padding: 40px;">
            <form method="POST" enctype="multipart/form-data">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h3>Edit Account</h3>
                </div>
                <!-- Username -->
                <div class="mb-3 row align-items-center">
                    <label for="Email" class="col-md-3">Username</label>
                    <input type="text" name="username" value="<%= objAccount.username %>" class="col-md-9 px-3 py-1"
                        placeholder="Enter username">
                </div>
                <!-- Email -->
                <div class="mb-3 row align-items-center">
                    <label for="Email" class="col-md-3">Email</label>
                    <input type="email" name="email" value="<%= objAccount.email %>" class="col-md-9 px-3 py-1"
                        placeholder="Enter email">
                </div>
                <!-- Password -->
                <div class="mb-3 row align-items-center">
                    <label for="exampleInputPassword1" class="col-md-3">Password</label>
                    <input type="password" name="password" value="<%= objAccount.password %>" class="col-md-9 px-3 py-1"
                        placeholder="Enter password">
                </div>
                <!-- RePassword -->
                <div class="mb-3 row align-items-center">
                    <label for="exampleInputPassword1" class="col-md-3">RePassword</label>
                    <input type="password" name="re_password" value="<%= objAccount.password %>"
                        class="col-md-9 px-3 py-1" placeholder="Enter re-password">
                </div>
                <!-- Phone -->
                <div class="mb-3 row align-items-center">
                    <label for="exampleInputPassword1" class="col-md-3">Phone</label>
                    <input type="text" name="phone" value="<%= objAccount.phone %>" class="col-md-9 px-3 py-1"
                        placeholder="Enter phone-number">
                </div>
                <!-- Avata -->
                <div class="mb-3 row align-items-center">
                    <label for="exampleInputPassword1" class="col-md-3">Avata</label>
                    <input type="file" name="avata" class="col-md-9 py-1" placeholder="Enter image">
                </div>
                <!-- Role -->
                <div class="mb-3 row align-items-center">
                    <label for="exampleInputPassword1 col-md" class="col-md-3">Role</label>
                    <div class="col-md row">
                            <% 
                            // Code checked radio
                            let checkUser = '';
                            let checkAdim = '';
                            if(objAccount.role == 'user') {
                                checkUser = 'checked';
                            } else {
                                checkAdim = 'checked'
                            }
                            %>
                            <div class="form-check col">
                                <input type="radio" name="role" value="user" <%= checkUser %>>
                                <label class="form-check-label" for="flexRadioDefault1">User</label>
                            </div>
                            <div class="form-check col">
                                <input type="radio" name="role" value="admin" <%= checkAdim %>>
                                <label class="form-check-label" for="flexRadioDefault2">Adim</label>
                            </div>
                    </div>
                </div>
                <h6 class="text-warning"><%= msg %></h6>
                <!-- Submit -->
                <div class="row">
                    <button type="submit" class="btn mt-2 col-12" style="background-color: #F68F7B; color: white;">Save</button>
                </div>
            </form>
        </div>
    </div>

    <%- include('../include/footer.ejs') %>