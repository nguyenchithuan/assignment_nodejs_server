<%- include('../include/header.ejs') %>

    <div class="container">
        <div class="text-center fs-2 mt-3">Danh sánh thể loại</div>
        <!-- Thêm/Search -->
        <div class="mt-4 d-flex justify-content-between">
            <a class="btn btn-primary col-md-2" href="../categorys/add">+Add Category</a>
        </div>
        <!-- table -->
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Name
                        <!-- 
                            ------?sort&column=name&type=-1------
                            - sort: biết là chức năng gì
                            - column: tên cột muốn sắp xếp trong bảng
                            - type: 1, -1, tăng, giảm
                         -->
                        <%- include('../chucnang/sort.ejs', {chucnang: 'sort', column: 'name', type: type}) %>
                    </th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < listCategory.length; i++) { %>
                    <tr>
                        <th scope="row">
                            <%= i + 1 %>
                        </th>
                        <td>
                            <%= listCategory[i].name %>
                        </td>
                        <td>
                            <a href="../categorys/edit/<%= listCategory[i]._id %>">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>

                            <!-- Button gọi ra dialog để theo tác -->
                            <a href="../categorys/delete/<%= listCategory[i]._id %>">
                                <i class="fa-solid fa-trash text-danger"></i>
                            </a>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
        <!--  -->
        <div class="d-flex justify-content-between">
            <h3>
                <%= listCategory.length %>/100
            </h3>
            <nav aria-label="...">
                <ul class="pagination">
                    <li class="page-item disabled">
                        <span class="page-link">Back</span>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item" aria-current="page">
                        <span class="page-link">2</span>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    <%- include('../include/footer.ejs') %>