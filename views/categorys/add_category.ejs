<%- include('../include/header.ejs') %>

    <div class="d-flex justify-content-center">
        <div class="bg-white rounded border shadow-lg" style="width: 600px; margin: 100px; padding: 40px;">
            <form method="POST">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h3>Thêm thể loại</h3>
                </div>
                <!-- Name-->
                <div class="mb-3 row align-items-center">
                    <label for="Email" class="col-md-3">Name category</label>
                    <input type="text" name="name" class="col-md-9 px-3 py-1" placeholder="Enter name category">
                </div>
                <h6 class="text-warning"><%= msg %></h6>
                <!-- Submit -->
                <div class="row">
                    <button type="submit" class="btn mt-2 col-12" style="background-color: #F68F7B; color: white;">Thêm</button>
                </div>
            </form>
        </div>
    </div>

    <%- include('../include/footer.ejs') %>